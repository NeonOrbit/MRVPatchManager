<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DropDownStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/drop_down_box_stroke</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="android:textColorHint">@color/drop_down_box_stroke</item>
    </style>

    <style name="DropDownHintTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MaterialCardSimpleOutlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/background_overlay</item>
        <item name="strokeColor">@color/primary_card_stroke</item>
    </style>

    <style name="MaterialButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_button_stroke</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="MaterialCustomIconButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="strokeColor">@color/pale_icon_foreground</item>
    </style>
</resources>
